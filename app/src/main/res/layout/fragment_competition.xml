<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zakro.footballscores.Activities.CompetitionActivity$LeagueTableFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorAppSecondary1Shade2"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="#"
            android:padding="1dp"
            android:gravity="center"
            android:textColor="@color/colorAppSecondary2Shade3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="15sp"
            android:text="Crest"
            android:padding="1dp"
            android:gravity="center"
            android:textColor="@color/colorAppSecondary2Shade3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="15sp"
            android:text="Team"
            android:padding="1dp"
            android:gravity="center"
            android:textColor="@color/colorAppSecondary2Shade3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="GP"
            android:padding="1dp"
            android:gravity="center"
            android:textColor="@color/colorAppSecondary2Shade3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="GF"
            android:padding="1dp"
            android:gravity="center"
            android:textColor="@color/colorAppSecondary2Shade3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="GA"
            android:padding="1dp"
            android:gravity="center"
            android:textColor="@color/colorAppSecondary2Shade3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="GD"
            android:padding="1dp"
            android:gravity="center"
            android:textColor="@color/colorAppSecondary2Shade3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="PT"
            android:padding="1dp"
            android:gravity="center"
            android:textColor="@color/colorAppSecondary2Shade3"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/leagueTableRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


</LinearLayout>