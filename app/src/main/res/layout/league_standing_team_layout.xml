<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >

    <TextView
        android:id="@+id/standingTeamRank"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/standingTeamCrest"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        />
    <TextView
        android:id="@+id/standingTeamName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:textSize="20sp"
        android:text="Man City"
        android:padding="1dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/standingTeamPlayedGames"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/standingTeamGoals"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/standingTeamGoalsAgainst"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/standingTeamGoalsDifference"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/standingTeamPoints"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"/>

</LinearLayout>
