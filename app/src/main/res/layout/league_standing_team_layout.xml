<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorAppSecondary1Shade1"
    android:layout_margin="5dp"
    >

    <TextView
        android:id="@+id/standingTeamRank"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="15sp"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"
        android:textColor="@color/colorAppSecondary2Shade2"/>
    <ImageView

        android:id="@+id/standingTeamCrest"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layerType="software"
        />
    <TextView
        android:id="@+id/standingTeamName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:textSize="15sp"
        android:text="Man City"
        android:padding="1dp"
        android:gravity="center"
        android:textColor="@color/colorAppSecondary2Shade2"/>
    <TextView
        android:id="@+id/standingTeamPlayedGames"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="15sp"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"
        android:textColor="@color/colorAppSecondary2Shade2"/>
    <TextView
        android:id="@+id/standingTeamGoals"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="15sp"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"
        android:textColor="@color/colorAppSecondary2Shade2"/>
    <TextView
        android:id="@+id/standingTeamGoalsAgainst"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="15sp"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"
        android:textColor="@color/colorAppSecondary2Shade2"/>
    <TextView
        android:id="@+id/standingTeamGoalsDifference"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="15sp"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"
        android:textColor="@color/colorAppSecondary2Shade2"/>
    <TextView
        android:id="@+id/standingTeamPoints"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="15sp"
        android:text="1"
        android:padding="1dp"
        android:gravity="center"
        android:textColor="@color/colorAppSecondary2Shade2"/>

</LinearLayout>
