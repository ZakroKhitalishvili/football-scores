<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/competitionFixtureDate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="2-3-2015"
        android:gravity="center"
        android:textSize="15sp"

        />
    <TextView
        android:id="@+id/competitionFixtureHomeTeam"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="Home Team"
        android:gravity="center"
        android:textSize="20sp"

        />
    <TextView
        android:id="@+id/competitionFixtureHomeTeamGoals"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="2"
        android:gravity="center"
        android:textSize="20sp"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text=":"
        android:gravity="center"
        android:textSize="20sp"

        />
    <TextView
        android:id="@+id/competitionFixtureAwayTeamGoals"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="5"
        android:gravity="center"
        android:textSize="20sp"

        />
    <TextView
        android:id="@+id/competitionFixtureAwayTeam"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="Away Team"
        android:gravity="center"
        android:textSize="20sp"

        />

</LinearLayout>
